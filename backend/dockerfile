# Stage 1: Build the TypeScript code
FROM node:20-slim AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
# This runs your 'tsc' or build command to create the /dist folder
RUN npm run build 

# Stage 2: Run the compiled JavaScript
# Stage 2: Run
FROM node:20-slim
WORKDIR /app
COPY package*.json ./
RUN npm install --only=production
COPY --from=builder /app/dist ./dist

# Point exactly to server.js
CMD ["node", "dist/server.js"]