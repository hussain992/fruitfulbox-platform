# Stage 1: Build the TypeScript code
FROM node:20-slim AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
# This runs your 'tsc' or build command to create the /dist folder
RUN npm run build 

# Stage 2: Run the compiled JavaScript
FROM node:20-slim
WORKDIR /app
COPY package*.json ./
# Only install production dependencies (no typescript, etc.)
RUN npm install --only=production
# Copy only the compiled code from the builder stage
COPY --from=builder /app .

# Use the PORT variable provided by Cloud Run
ENV PORT=8080
EXPOSE 8080

CMD ["npm", "start"]